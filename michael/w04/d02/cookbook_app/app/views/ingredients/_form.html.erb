<% unless @ingredient.errors.empty? %>
<ul id="errors">
<% @ingredients.errors.full_messages.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>

<%= form_for @ingredient do |f| %>

<div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</div>
  <div class="form-group">
    <%= f.label :measurement %><br>
    <%= f.text_field :measurement %>
</div>
<div class="form-group">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
</div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.url_field :image %>
</div>
    <div class="form-group">
    <%= f.submit %>
</div>
<% end %>
